@page
@model JellyPagesMasterDetailApp.Pages.Nicole.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>

    body {
        background-image: url("/Images/jellyfishing.webp");
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        color: black;
    }

    h1
    {
        background-color:lightgoldenrodyellow;
        color: purple;
        border-style:groove;
        border-radius: 5px;
        width:fit-content;
        padding:5px;
    }
    p
    {
        width:fit-content;
        border-radius: 5px;
        color:darkslategrey;

    }

    button
    {
        background-color: lightgoldenrodyellow;
        color: cornflowerblue;
        float: right;
        border-style: double;
        border-radius: 5px
    }
    tr:hover
    {
        background-color:yellow;
    }
</style>

<h1> Jelly Pages - A Bikini Bottom Phone Book</h1>

<div>
    <form>

        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />

    </form>
    <button>
        <a asp-page="Create"> Create New</a>
    </button>
</div>

<table class="table">
    <thead>
        <tr style="background-color:lightseagreen">
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.FirstSort">
                @Html.DisplayNameFor(model => model.Phonebook[0].FirstName)
                </a>
            </th>
            <th>
                <a asp asp-page="./Index" asp-route-sortOrder="@Model.LastSort">
                @Html.DisplayNameFor(model => model.Phonebook[0].LastName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phonebook[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phonebook[0].Phone)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Phonebook[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Phonebook) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


